<div
  class={{class "bg-primary text-white px-4 py-16 text-center"}}
  ...attributes
>
  <div class="max-w-xl mx-auto">
    <h1 class="font-medium leading-none">
      {{#if @prefix}}
        <h4>
          {{@prefix}}
        </h4>
      {{/if}}
      <h1 class="my-4 font-kiro">
        {{@heading}}
      </h1>
    </h1>
    <p class="mx-auto mb-2">
      {{@byline}}
    </p>
    <div class="mt-8">
      <Button
        @route={{link route="docs"}}
        @text="Read the docs"
        @color="border text-primary bg-body hover:text-primary shadow"
        @size="h-10"
        @focusColor={{array
          "shadow-outline border-primary-opacity-4"
          "border-transparent"
        }}
      />
    </div>
    {{yield}}
  </div>
</div>