{{#if title}}
  <div
    class="px-4 py-2 text-xs subpixel-antialiased font-medium bg-black border-b rounded-t text-gray-1 border-gray-8"
  >
    {{title}}
  </div>
{{/if}}
<div
  class="text-xs px-2 py-1 bg-code-base
    relative subpixel-antialiased
    {{if title "rounded-b" "rounded"}}"
  data-test-id={{or data-test-id name}}
>
  {{#with (get-code-snippet name unindent=unindent) as |snippet|}}
    {{#if showCopy}}
      {{#copy-button
        clipboardText=snippet.source
        title="copy to clipboard"
        class="absolute top-0 right-0 p-3 text-white bg-transparent border-none opacity-50  hover:bg-transparent hover:opacity-100"
      }}
        Copy
      {{/copy-button}}
    {{/if}}
    <DocsCodeHighlight @language={{language}}>
      {{snippet.source}}
    </DocsCodeHighlight>
  {{/with}}
</div>