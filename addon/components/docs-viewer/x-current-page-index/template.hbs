<nav
  class="mr-auto it:hidden AddonDocs-DocsViewer-CurrentPageIndex ot:block flex-no-shrink"
  data-test-current-page-index
>
  <div
    class="sticky top-0 max-h-screen pt-4 pb-8 pr-8 overflow-y-scroll scrolling-touch"
  >
    <ul class="pl-6 leading-normal border-l-2 border-gray-1">
      {{#if pageIndex.length}}
        <li class="mt-12 font-bold uppercase text-secondary text-2xs">
          On This Page
        </li>
      {{/if}}
      {{#each pageIndex as |item|}}
        <li
          class="leading-tight tracking-tight
            {{if item.indent (concat "ml-" item.indent)}}

            {{if item.marginTop (concat "mt-" item.marginTop)}}

            {{if item.marginBottom (concat "mt-" item.marginBottom)}}"
          data-test-index-item
        >
          <Links
            class={{class (concat "text-" item.size)}}
            @color="text-secondary font-medium"
            @href="#{{item.id}}"
            @text={{item.text}}
          />
        </li>
      {{/each}}
    </ul>
  </div>
</nav>