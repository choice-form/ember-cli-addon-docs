<div class="px-4 mt-4 text-right om:px-6 om:hidden">
  <Button @text="â˜° Menu" @onClick={{fn (toggle "isShowingMenu" this)}} />
</div>
<div class="border-r border-normal AddonDocs-DocsViewer-Nav flex-no-shrink">
  <nav
    onclick={{action (mut isShowingMenu) false}}
    class={{class
      "m:absolute right-0 shadow-lg om:shadow-none m:mr-2 om:mr-0 om:pl-2 max-w-md w-90% om:w-72 z-10 transition om:sticky om:top-0 om:opacity-100"
      (if isShowingMenu "m:bg-white m:opacity-100" "m:opacity-0")
    }}
  >
    <div class="px-3 pt-px mb-8 om:px-4 om:max-h-screen om:overflow-y-scroll">
      <div class="text-right om:hidden">
        <Button
          @preset="text"
          @icon="#outline-remove-16"
          @onClick={{fn (mut isShowingMenu) false}}
        />
      </div>
      {{#docs-viewer/x-nav-list}}
        {{yield
          (hash
            section=(component "docs-viewer/x-section")
            item=(component "docs-viewer/x-nav-item")
            subnav=(component "docs-viewer/x-nav-list" class="ml-4")
          )
        }}
        {{docs-viewer/x-autogenerated-api-docs root=root project=project}}
      {{/docs-viewer/x-nav-list}}
      <div class="my-16 mr-2 rounded text-2xs">
        <a
          href="https://github.com/ember-learn/ember-cli-addon-docs"
          class="flex items-center no-underline transition opacity-50 hover:opacity-100 text-inherit text-gray-8"
        >
          {{svg-jar "addon-docs-pen" width=22 height=16 class="mr-2"}}
          <div>
            Powered by
            <span class="font-bold">
              AddonDocs
            </span>
          </div>
        </a>
      </div>
    </div>
  </nav>
</div>